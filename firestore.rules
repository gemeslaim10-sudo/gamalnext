rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper: Check if user is an admin
    function isAdmin() {
      return request.auth != null && (
        request.auth.token.email == 'montasrrm@gmail.com' || 
        request.auth.token.email == 'gemeslaim10@gmail.com'
      );
    }
    
    // Helper: Check if user is authenticated
    function isAuth() {
        return request.auth != null;
    }

    // 1. Site Content (Hero, Skills, Experience, Projects, AI Settings)
    // Public: Read-only
    // Admin: Read/Write
    match /site_content/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    match /settings/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // 2. Articles
    // Public: Read all
    // Auth: Create
    // Admin/Owner: Update/Delete
    match /articles/{articleId} {
        allow read: if true;
        allow create: if isAuth(); 
        allow update, delete: if isAdmin() || (isAuth() && resource.data.authorId == request.auth.uid);
    }
    
    // 3. User Profiles
    // Public: Read
    // Owner/Admin: Write
    match /users/{userId} {
        allow read: if true; 
        allow write: if isAuth() && (request.auth.uid == userId || isAdmin());
    }

    // 4. Comments
    // Public: Read
    // Auth: Create
    // Admin/Owner: Update/Delete
    match /comments/{commentId} {
        allow read: if true;
        allow create: if isAuth();
        allow update, delete: if isAuth() && (resource.data.userId == request.auth.uid || isAdmin());
    }

    // 5. Reviews
    // Public: Read approved only (or Admin read all)
    // Any: Create
    // Admin: Update/Delete
    match /reviews/{reviewId} {
        allow read: if (resource.data.status == 'approved') || isAdmin();
        allow create: if true;
        allow update, delete: if isAdmin();
    }

    // 6. Notifications
    match /notifications/{notifId} {
        allow read, update: if isAuth() && (resource.data.recipientId == request.auth.uid || (resource.data.recipientId == 'ADMIN' && isAdmin()));
        allow create: if isAuth();
        allow delete: if isAdmin() || (isAuth() && resource.data.recipientId == request.auth.uid);
    }
    
    // 7. Likes
    match /likes/{likeId} {
        allow read: if true;
        allow create: if isAuth();
        allow delete: if isAuth() && (resource.data.userId == request.auth.uid || isAdmin());
    }

    // 8. AI Chat Sessions
    match /chat_sessions/{sessionId} {
      allow create, update: if true;
      allow read, delete: if isAdmin();
    }

    // 9. Leads
    match /leads/{leadId} {
      allow create: if true;
      allow read, update, delete: if isAdmin();
    }

    // 10. User History (Tools Usage)
    match /user_history/{historyId} {
      allow read: if isAuth() && resource.data.userId == request.auth.uid;
      allow create: if isAuth() && request.resource.data.userId == request.auth.uid;
      allow delete: if isAuth() && resource.data.userId == request.auth.uid;
      allow update: if false; // لا يُسمح بالتعديل
    }
  }
}
